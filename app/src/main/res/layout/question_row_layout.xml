<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="16dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:id="@+id/color_view"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#FC5353" />

        <TextView
            android:id="@+id/txt_question_count"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_fonts_bold"
            android:gravity="center_vertical"
            android:text="@string/_1"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_question_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_fonts"
            android:gravity="center_vertical"
            android:text="@string/null_pointer_exception"
            android:textColor="#000000"
            android:textSize="21sp" />

    </LinearLayout>

    <View
        android:id="@+id/touch_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.v7.widget.CardView>